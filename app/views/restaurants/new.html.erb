<h1>Create a new Restaurant</h1>

<%= simple_form_for(@restaurant) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number %>
  <%= f.select :category, collection: Restaurant::CATEGORIES %>

  <%= f.button :submit %>
<% end %>

<%= link_to 'Back', restaurants_path %>

