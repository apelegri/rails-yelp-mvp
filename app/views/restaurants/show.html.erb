<h1>Selected Restaurant</h1>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone number:</strong>
  <%= @restaurant.phone_number %>
</p>

<p>
  <strong>Category:</strong>
  <%= @restaurant.category %>
</p>

<p>
  <strong>Reviews:</strong>
  <% @restaurant_reviews.each do |review| %>
    <%= review.content %>
    <%= review.rating %>
  <% end %>
</p>



<%= link_to 'Back', restaurants_path, {class: "btn btn-primary"}%>

